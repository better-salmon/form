{
  "$schema": "./node_modules/turbo/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", "dist-ssr/**", "build/**"]
    },
    "lint": {
      "dependsOn": ["al-formo#build", "^lint"]
    },
    "check-types": {
      "dependsOn": ["al-formo#build", "^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "preview": {
      "cache": false,
      "persistent": true
    }
  }
}
